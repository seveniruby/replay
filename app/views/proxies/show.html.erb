<%- model_class = Proxy -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @proxy.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:protocol) %>:</strong></dt>
  <dd><%= @proxy.protocol %></dd>
  <dt><strong><%= model_class.human_attribute_name(:forward_ip) %>:</strong></dt>
  <dd><%= @proxy.forward_ip %></dd>
  <dt><strong><%= model_class.human_attribute_name(:forward_port) %>:</strong></dt>
  <dd><%= @proxy.forward_port %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bind_port) %>:</strong></dt>
  <dd><%= @proxy.bind_port %></dd>
  <dt><strong><%= model_class.human_attribute_name(:project_id) %>:</strong></dt>
  <dd><%= @proxy.project_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              proxies_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_proxy_path(@proxy), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              proxy_path(@proxy),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
